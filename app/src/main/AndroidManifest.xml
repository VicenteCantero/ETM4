<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.proyecto.etm4">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ETM4">
        <activity
            android:name=".SetupAdminActivity"
            android:exported="false" />
        <activity
            android:name=".AdminActivity"
            android:exported="false" />
        <activity
            android:name=".SetupActivity"
            android:exported="true" />
        <activity
            android:name=".ConfirmarCompraActivity"
            android:exported="true" />
        <activity
            android:name=".CarritoActivity"
            android:exported="true" />
        <activity
            android:name=".PrincipalActivity"
            android:exported="true"
            android:theme="@style/Theme.ETM4.NoActionBar" />
        <activity
            android:name=".LoginAdminActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>